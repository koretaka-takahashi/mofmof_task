<h1>物件登録</h1>

<%= form_for @property do |f| %>
  <p><%= f.label :物件名 %></p>
  <p><%= f.text_field :name %></p>


  <p><%= f.label :賃料 %></p>
  <p><%= f.text_field :price %>円</p>

  <p><%= f.label :住所 %></p>
  <p><%= f.text_field :address %></p>

  <p><%= f.label :築年数 %></p>
  <p><%= f.text_field :age %>年</p>
  
  <p><%= f.label :備考 %></p>
  <p><%= f.text_area :note %></p>

  <hr>
  <h3>最寄り駅１</h3>

  <%= f.fields_for :nearest_stations do |ns| %>
    <p><%= ns.label :路線名 %></p>
    <p><%= ns.text_field :line %></p>

    <p><%= ns.label :駅名 %></p>
    <p><%= ns.text_field :station %></p>

    <p><%= ns.label :徒歩分数 %></p>
    <p><%= ns.text_field :walking_minutes %>分</p>
  
  <% end %>

  <h3>最寄り駅2</h3>

  <%= f.fields_for :nearest_stations do |ns| %>
    <p><%= ns.label :路線名 %></p>
    <p><%= ns.text_field :line %></p>

    <p><%= ns.label :駅名 %></p>
    <p><%= ns.text_field :station %></p>

    <p><%= ns.label :徒歩分数 %></p>
    <p><%= ns.text_field :walking_minutes %>分</p>
  
  <% end %>
<%= f.submit "登録する" %>
<% end %>

<p><%= link_to "戻る" %></p>
